<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="amasty_xsearch_delete_outdated_recently_viewed_products"
             instance="Amasty\Xsearch\Cron\ClearOutdatedRecentlyViewedRecords" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
        <job name="amasty_xsearch_delete_outdated_search_requests"
             instance="Amasty\Xsearch\Cron\ClearOutdatedSearchRequests" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
    </group>
</config>
